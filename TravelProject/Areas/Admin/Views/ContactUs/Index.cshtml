@model IEnumerable<ContactUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Bize Ulaşın Mesajları</h1>
<table class="table table-bordered">
    <tr>
        <th>Gönderen</th>
        <th>Gönderen Mail</th>
        <th>Konu</th>
        <th>İçerik</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactUsName</td>
            <td>@item.ContactUsMail</td>
            <td>@item.ContactUsSubject</td>
            <td>@item.ContactUsMessageBody</td>
            <td>@item.ContactUsMessageDate</td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td>
                <a class="btn btn-outline-success" href="/Admin/Mail/SendMailToContactUs/@item.ContactUsId">Mail Gönder</a>
            </td>
        </tr>
    }
</table>

