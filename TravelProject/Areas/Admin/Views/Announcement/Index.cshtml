@model IEnumerable<AnnouncementListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyurular</h1>

<table class="table table-bordered">
    <tr>
        <th>Konu</th>
        <th>Duyuru</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AnnouncementTitle</td>
            <td>@item.AnnouncementContent</td>
            <td>@item.AnnouncementDate</td>
            <td><a href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementID" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>

