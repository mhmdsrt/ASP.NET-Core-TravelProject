@using EntityLayer.Concrete
@model IEnumerable<Destination>
@{
    ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h3>Tur Rotaları</h3>

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">Aktif Tur Rotaları</h4>
				<a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
				<div class="heading-elements">
					<ul class="list-inline mb-0">
						<li><a data-action="collapse"><i class="ft-minus"></i></a></li>
						<li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
						<li><a data-action="expand"><i class="ft-maximize"></i></a></li>
						<li><a data-action="close"><i class="ft-x"></i></a></li>
					</ul>
				</div>
			</div>
			<div class="card-content collapse show">
				<div class="card-body">
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th style="width:210px;">Görsel</th>
									<th>Şehir</th>
									<th>Konaklama Süresi</th>
									<th>Fiyat</th>
									<th>Kapasite</th>
									<th>Detaylar</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td style="text-align: center; vertical-align: middle;">
											<img src="@item.DestinationImage" style="height:150px;width:200px;" />
										</td>
										<td>@item.DestinationCity</td>
										<td>@item.DestinationAccomodationDay</td>
										<td>@item.DestinationPrice ₺</td>
										<td>@item.DestinationCapacity</td>
										<td><a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-info">Detaylar</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



