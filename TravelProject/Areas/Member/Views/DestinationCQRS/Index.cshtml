@model IEnumerable<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Rotalar</h1>

<table class="table table-bordered">
    <tr>
        <th style="width:130px;">Görsel</th>
        <th>Şehir</th>
        <th>Konaklama Süresi</th>
        <th>Ücret</th>
        <th>Kapasite</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align: center; vertical-align: middle;">
                <img src="@item.DestinationImage" style="height:120px; width:120px; object-fit:cover;" />
            </td>
            <td>@item.DestinationCity</td>
            <td>@item.DestinationAccomodationDay</td>
            <td>@item.DestinationPrice</td>
            <td>@item.DestinationCapacity</td>
        </tr>
    }
</table>