@model Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h1>Rezervasyon Yap </h1>
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
                <h4 class="card-title">Rezervasyon Yap </h4>
				<a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
				<div class="heading-elements">
					<ul class="list-inline mb-0">
						<li><a data-action="collapse"><i class="ft-minus"></i></a></li>
						<li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
						<li><a data-action="expand"><i class="ft-maximize"></i></a></li>
						<li><a data-action="close"><i class="ft-x"></i></a></li>
					</ul>
				</div>
			</div>
			<div class="card-content collapse show">
				<div class="card-body">
                    <form asp-area="Member" asp-action="NewReservation" asp-controller="Reservation" method="post">
                        <div class="form-group">
                            @Html.Label("Lokasyon")
                            @Html.DropDownListFor(d => d.DestinationID, (List<SelectListItem>)ViewBag.DestinationSelectList, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Kişi Sayısı")
                            <input type="text" asp-for="ReservationVisitorCount" class="form-control" />
                            <span asp-validation-for="ReservationVisitorCount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Html.Label("Tarih")
                            <input type="date" asp-for="ReservationDate" class="form-control" />
                            <span asp-validation-for="ReservationDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Html.Label("Açıklama")
                            <textarea asp-for="ReservationDescription" class="form-control" rows="5" style="width: 100%;"></textarea>
                            <span asp-validation-for="ReservationDescription" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <button class="btn btn-outline-success" id="NewReservationBtn">Rezervasyon Yap</button>
                        </div>
                    </form>
				</div>
				</div>
			</div>
		</div>
	</div>
</div>




