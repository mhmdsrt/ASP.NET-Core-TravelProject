@using EntityLayer.Concrete
@model IEnumerable<Destination>
@{
    ViewData["Title"] = "GetAllDestinationBySearchComboBox";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<section class="w3l-grids-3 py-5">
    <div class="container py-md-5">
        <div class="title-content text-left mb-lg-5 mb-4">
            <h6 class="sub-title">Seyehatini Planla</h6>
            <h3 class="hny-title">Turlar</h3>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <a href="/Destination/DestinationDetails/@item.DestinationID">
                            <img src="@item.DestinationImage"
                                 class="card-img-top"
                                 style="height: 250px; "
                                 alt="@item.DestinationCity">
                        </a>

                        <div class="card-body d-flex flex-column">
                            <a href="/Destination/DestinationDetails/@item.DestinationID">
                                <h5 class="card-title">@item.DestinationCity</h5>
                            </a>
                            <p class="card-text">
                                <strong style="color:#FF1654;">Konaklama:</strong>@item.DestinationAccomodationDay

                            </p>
                            <div class="mt-auto">
                                <p class="mb-1"><strong style="color:#FF1654;">Fiyat: </strong>@item.DestinationPrice ₺</p>
                                <p class="text-muted"><strong style="color:#FF1654;">Max Misafir:</strong>@item.DestinationCapacity Kişilik</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<style>
    .card:hover .card-title {
        color: #FF1654;
        transition: color 0.3s ease;
    }

    .card-title:hover {
        color: #FF1654;
    }
</style>


