@model ContactUs
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Bize Ulaşın</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Home/Index">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Bize Ulaşın </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!-- contact-form -->
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>Bizimle İletişime Geçin</h5>
                            <p class="mt-3 mb-4">
                                Soru ve önerileriniz için mail atabilirsiniz.
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Mail Adresimiz:</h6>
                            <p>
                                <a href="mailto:mail@traversal.com">
                                    seyehathizmetlerimhmmd@gmail.com
                                </a>
                            </p>
                            <h6 class="mt-4">Adres:</h6>
                            <p>Hacettepe, Dumlupınar Cd., 06230 Altındağ/Ankara </p>
                            <h6 class="mt-4">Telefon:</h6>
                            <p class="margin-top"><a href="tel:+44-255-366-88">0312 34 43</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form asp-controller="ContactUs" asp-action="Index" method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" asp-for="ContactUsName" placeholder="Adınız*" class="contact-input" />
                            </div>
                            <div class="form-group">
                                <input type="email" asp-for="ContactUsMail" placeholder="Mail Adresiniz*" class="contact-input" required="" />
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="ContactUsSubject" placeholder="Konu*" class="contact-input" />
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="ContactUsMessageBody" placeholder="Mesaj İçeriği*" required=""></textarea>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Gönder</button>
                        </div><br />
                       <div>
                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-warning">@ViewBag.Message</div>
                            }
                       </div>

                    </form>
                </div>

            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Harita</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3059.4735819852103!2d32.864536925842486!3d39.93079529786874!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d34e43f5da53f7%3A0xf255abe733fb029f!2zSGFjZXR0ZXBlLCBEdW1sdXDEsW5hciBDZC4sIDA2MjMwIEFsdMSxbmRhxJ8vQW5rYXJh!5e0!3m2!1str!2str!4v1748716780273!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</section>
